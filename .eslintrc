{
  "parser": "babel-eslint",
  "env": {
    "mocha": true,
    "node": true,
    "es6": true,
    "browser": true
  },
  "ecmaFeatures": {
    "classes": true,
    "modules": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "expect": true
  },
  "rules": {
    "indent": [
      "error",
      "tab",
      { "SwitchCase": 1 }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-tabs": 0,
    "semi": 0,
    "no-console": 1
  }
}
